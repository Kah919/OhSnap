<h1>Categories</h1>
<div class="container">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= render_breadcrumbs :separator => ' / ' %></li>
  </ol>
</div>

<div class="users_container">
  <div class="row">
    <% @categories.each do |category|  %>
      <div class="col-sm">
        <div class="card" style="width: 18.9rem;">
          <% post = category.posts[-1] %>
          <% unless post == nil %>
          <%= image_tag post.image %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= category.name %></h5>
            <a href="<%= category_path(category) %>" class="btn btn-primary">View Category</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
