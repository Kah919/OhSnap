    <div class="new_wrapper">
      <h2 class="h2login">New Post</h2>
          <%= form_for @post, multipart: true do |f| %>
          <div class="split_two">
              <p>
                <%= f.label :image %>
                <%= f.file_field :image, class: "form-control" %>
              </p>
              <p class="post_cap">
                <%# f.label :caption %>
                <%= f.text_field :caption, placeholder: "Caption", class: "form-control" %>
              </p>
              <%= f.hidden_field :user_id, value: current_user.id %>
              <%= f.submit class: "btn btn-outline-primary" %>
            </div>
            <div class="split_two">
              <label for="post[category_names][]">Categories</label>
              <input name="post[category_names][]" list="categories_autocomplete" class="form-control">
              <br>
              <input name="post[category_names][]" list="categories_autocomplete" class="form-control">
              <br>
              <input name="post[category_names][]" list="categories_autocomplete" class="form-control">

              <datalist id="categories_autocomplete">
                <% @categories.each do |category| %>
                <option value="<%= category.name %>">
                  <% end %>
                </datalist>
            </div>
            <% end %>
      </div>
    </div>
