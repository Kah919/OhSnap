<h1><%= @post.caption %></h1>
<h4>Posted by: <%= link_to @user.username, user_path(@user) %></h4>
<img src="<%= @post.image %>">

<ul>
<% @categories.each do |category|%>
<li><%= category.name %></li>
<% end %>
</ul>
<br>

<%= form_for @comment do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :post_id, value: @post.id %>
  <%= f.text_area :contents %>

  <%= f.submit "â‡¨" %>
<% end %>

<div class="all_comments">
  <% @post.comments.each do |comment| %>
    <%= link_to comment.user.username, user_path(comment.user) %> :
    <br>
    <%= comment.contents %>
    <br>
  <% end %>
</div>

<hr>
<%= button_to "Edit Post", edit_post_path(@post), method: :get %>
<%= button_to "Delete Post", post_path(@post), data: {:confirm => "Are you sure you want to delete this post? \nThis cannot be undone."}, method: :delete %>
