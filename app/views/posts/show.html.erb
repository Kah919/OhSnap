<blockquote class="blockquote">
  <h1 class="mb-0"><%= @post.caption %></h1>
  <footer class="blockquote-footer">Posted by: <%= link_to @user.username, user_path(@user) %></footer>
</blockquote>
<%= image_tag @post.image %>
<h3>Categories</h3>
<ul>
<% @categories.each do |category|%>
<li><%= category.name %></li>
<% end %>
</ul>


<% if @liked %>
  <div class="liked">
    <%= link_to "Unlike", like_path(@liked), method: :delete  %>
    <i class="fa fa-thumbs-o-up" style="font-size:24px"></i> + <%= @number_of_likes %>

  </div>
  <% else %>
  <%= form_for @like do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id%>
    <%= f.hidden_field :post_id, value: @post.id %>
    <%= f.submit "Like" %> + <%= @number_of_likes %>
  <% end %>
<% end %>

<br>
  <%= form_for @comment do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :post_id, value: @post.id %>
    <%= f.text_area :contents %>

    <%= f.submit "â‡¨" %>
  <% end %>

<div class="all_comments">
  <% @post.comments.each do |comment| %>
    <%= link_to comment.user.username, user_path(comment.user) %> :
    <br>
    <%= comment.contents %>
    <br>
  <% end %>
</div>

<hr>
<% if current_user == @user %>
  <%= button_to "Edit Post", edit_post_path(@post), method: :get %>
  <%= button_to "Delete Post", post_path(@post), data: {:confirm => "Are you sure you want to delete this post? \nThis cannot be undone."}, method: :delete %>
<% end %>
